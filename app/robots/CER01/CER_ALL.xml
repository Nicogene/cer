    <!-- TRIPOD LIB -->
    <devices file="hardware/motorControl/cer_torso_tripod-mc.xml" />
    <devices file="wrappers/motorControl/cer_torso_tripod-mc_wrapper.xml" />

    <!--  CALIBRATORS -->
    <devices file="calibrators/cer_base-calib.xml" />
    <devices file="calibrators/cer_left_arm-calib.xml" />
    <devices file="calibrators/cer_right_arm-calib.xml" />
