    <!-- DEVICE -->
    <devices file="hardware/motorControl/cer_base-ems21-mc.xml" />
    <devices file="wrappers/motorControl/cer_base-mc_wrapper.xml" />

    <!-- ROS -->
    <devices file="wrappers/motorControl/cer_ros_wrapper.xml" />
        
