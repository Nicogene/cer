<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD robotInterface 1.0//EN" "http://www.icub.org/DTD/robotInterfaceV1.0.dtd">

 <!-- Initialization file for EMS 10 - CER hand, 2 dof -->

<devices robot="CER01" build="1">
  <device name="cer_left_hand_mc" type="embObjMotionControl">
      <params file="general.xml" />
      <params file="hardware/electronics/cer_left_hand-mcp14-eln.xml" />
      <params file="hardware/mechanicals/cer_left_hand-mcp14-mec.xml" />

    <group name="LIMITS">
        <param name="jntPosMax">                135     120           </param>
        <param name="jntPosMin">                0       0             </param>
        <param name="rotorPosMin">              0       0             </param>
        <param name="rotorPosMax">              0       0             </param>
        <param name="jntVelMax">                150     150            </param>
        <param name="motorOverloadCurrents">    8000    8000          </param>
        <param name="motorNominalCurrents">     800     800           </param>
        <param name="motorPeakCurrents">        800     800           </param>
        <param name="motorPwmLimit">            3360    3360           </param>  
    </group>

	<group name="POSITION_CONTROL">
	<param name="controlLaw">    joint_pid_v1            </param> 
        <param name="controlUnits">  metric_units           </param> 
        <param name="kp">            -100         100        </param>       
        <param name="kd">               0           0        </param>       
        <param name="ki">            -100         100        </param>       
        <param name="limOutput">        0           0        </param>      
        <param name="maxOutput">     1500        1500        </param>          
        <param name="maxInt">        1000        1000        </param>       
        <param name="shift">            0           0        </param>       
        <param name="ko">               0           0        </param>       
        <param name="stictionUp">       0           0        </param>       
        <param name="stictionDwn">      0           0        </param>     
        <param name="kff">              0           0        </param>   
    </group>

    <group name="TORQUE_CONTROL">
        <param name="controlLaw">    motor_pid_with_friction_v1               </param> 
        <param name="controlUnits">  metric_units                             </param>         
        <param name="kp">              0          0            </param>       
        <param name="kd">              0          0            </param>       
        <param name="ki">              0          0            </param>       
        <param name="maxOutput">       0          0            </param>       
        <param name="maxInt">          0          0            </param>       
        <param name="shift">           0          0            </param>       
        <param name="ko">              0          0            </param>       
        <param name="stictionUp">      0          0            </param>       
        <param name="stictionDwn">     0          0            </param>       
        <param name="kff">             0          0            </param>  
        <param name="kbemf">           0          0            </param>            
        <param name="filterType">      0          0            </param>     
        <param name="ktau">            0          0            </param>
    </group>

    <group name="IMPEDANCE">
        <param name="stiffness">       0      0           </param>    
        <param name="damping">         0      0           </param>    
    </group>
	
  </device>
</devices>

