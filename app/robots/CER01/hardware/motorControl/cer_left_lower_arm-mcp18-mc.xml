<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD robotInterface 1.0//EN" "http://www.icub.org/DTD/robotInterfaceV1.0.dtd">

 <!-- Initialization file for MC4+ 18 - CER left lower arm, 4 dof -->

<devices robot="CER01" build="1">
  <device name="cer_left_lower_arm_mc" type="embObjMotionControl">
      <params file="general.xml" />
      <params file="hardware/electronics/cer_left_lower_arm-mcp18-eln.xml" />
      <params file="hardware/mechanicals/cer_left_lower_arm-mcp18-mec.xml" />

    <group name="LIMITS">
        <param name="jntPosMax">                80      0.12     0.12     0.12     </param>
        <param name="jntPosMin">               -80      0        0        0        </param>
        <param name="rotorPosMin">              0       0        0        0        </param>
        <param name="rotorPosMax">              0       0        0        0        </param>
        <param name="jntVelMax">                3000    0.02     0.02     0.02     </param>
        <param name="motorOverloadCurrents">    20000    20000     20000     20000     </param>
        <param name="motorNominalCurrents">     10000      90       90       90     </param>
        <param name="motorPeakCurrents">        20000     500      500      500     </param>
        <param name="motorPwmLimit">            3360    3360     3360     3360     </param>  
    </group>

	<group name="POSITION_CONTROL">
	<param name="controlLaw">    joint_pid_v1 </param> 
        <param name="controlUnits">  machine_units </param> 
        <param name="kp">              -0.02        20         20         20     </param>       
        <param name="kd">               0           0          0          0     </param>       
        <param name="ki">               0           0          0          0     </param>       
        <param name="limOutput">        1000         800        800        800     </param>      
        <param name="maxOutput">        1000         800        800        800     </param>          
        <param name="maxInt">           0           0          0          0     </param>       
        <param name="shift">            0           0          0          0     </param>       
        <param name="ko">               0           0          0          0     </param>       
        <param name="stictionUp">       0           0          0          0     </param>       
        <param name="stictionDwn">      0           0          0          0     </param>     
        <param name="kff">              0           0          0          0     </param>   
    </group>

    <group name="TORQUE_CONTROL">
        <param name="controlLaw">    motor_pid_with_friction_v1               </param> 
        <param name="controlUnits">  metric_units                             </param>         
        <param name="kp">              0          0          0          0     </param>       
        <param name="kd">              0          0          0          0     </param>       
        <param name="ki">              0          0          0          0     </param>       
        <param name="maxOutput">       0          0          0          0     </param>       
        <param name="maxInt">          0          0          0          0     </param>       
        <param name="shift">           0          0          0          0     </param>       
        <param name="ko">              0          0          0          0     </param>       
        <param name="stictionUp">      0          0          0          0     </param>       
        <param name="stictionDwn">     0          0          0          0     </param>       
        <param name="kff">             0          0          0          0     </param>  
        <param name="kbemf">           0          0          0          0     </param>            
        <param name="filterType">      0          0          0          0     </param>     
        <param name="ktau">            0          0          0          0     </param>
    </group>

    <group name="IMPEDANCE">
        <param name="stiffness">       0      0      0      0     </param>    
        <param name="damping">         0      0      0      0     </param>    
    </group>
	
  </device>
</devices>

