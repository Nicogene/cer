<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD robotInterface 1.0//EN" "http://www.icub.org/DTD/robotInterfaceV1.0.dtd">

<devices robot="CER01" build="1">
  <device name="cer_safe_mc" type="safeMotionControl">
      <action phase="startup" level="7" type="attach">
	  <paramlist name="networks">
	  <!-- The param value must match the device name in the corresponding emsX file -->
          <elem name="safe_torso"> cer_torso_mc </elem>
          <elem name="safe_head"> cer_head_mc </elem>
          <elem name="safe_left_upper_arm"> cer_left_upper_arm_mc </elem>
          <elem name="safe_left_lower_arm"> cer_left_lower_arm_mc </elem>
          <elem name="safe_right_upper_arm"> cer_right_upper_arm_mc </elem>
          <elem name="safe_right_lower_arm"> cer_right_lower_arm_mc </elem>
	  </paramlist>
      </action>

      <action phase="shutdown" level="7" type="detach" />

  </device>
</devices>